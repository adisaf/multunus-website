<div class="col-sm-12">
  <h2 class="segment-title"><%= segment.title %></h1>
  <div class="row projects">
    <% segment.projects.each do |project| %>
      <div class="col-sm-4">
        <div class="project">
          <div class="project-title">
            <a href="<%= project.github_link %>" target="_blank"><%= project.title %></a>
          </div>
          <div class="project-info">
            <%= project.info %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
